{
  "compilerOptions": {
    "baseUrl": "..",
    "allowJs": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES5",
    "lib": [
      "dom",
      "es6"
    ],
    "jsx": "react",
    "sourceMap": true,
    "types": [
      "node"
    ],
    "paths": {
      "*": [
        "app/frontend/custom-typings/*",
        "app/frontend/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}