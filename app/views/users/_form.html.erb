<%= bootstrap_form_for(user, html: { class: 'user-form' }) do |form| %>
  <%= form.select(:role, options_for_select(User::ROLES.map{ |role| [role.titleize, role] }, form.object.role), include_blank: true, label_class: 'required') %>
  <%= form.select(:gender, options_for_select(User::GENDERS.map{ |role| [role.titleize, role] }, form.object.gender), include_blank: true, label_class: 'required') %>
  <%= form.text_field :first_name, class: 'required' %>
  <%= form.text_field :sir_name, class: 'required' %>
  <%= form.text_field :phone_number %>
  <%= form.text_field :national_insurance_number %>
  <%= form.text_field :email, class: 'required' %>
  <%= form.date_select :date_of_birth, start_year: Time.now.year, end_year: 1940, include_blank: true %>
  <%= form.text_field :password, class: 'required' %>
  <%= form.fields_for(:address, (form.object.address || Address.new)) do |address_fields| %>
    <%= render partial: 'address_fields', locals: { form: address_fields } %>
  <% end %>
  <button type="submit" class="btn btn-default">Submit</button>
<% end %>
