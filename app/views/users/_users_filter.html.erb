<div class="invites-index-filter">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">Filter</div>
    </div>
    <div class="panel-body">
      <%= form_for(
            'filter',
            url: users_path,
            html: { method: :get, class: 'form-inline' }
          ) do |form| %>
        <%= form.text_field(:name_text, label: 'Name', value: filter.name_text) %>
        <%= form.text_field(:email_text, label: 'Email', value: filter.email_text) %>
        <%= form.select(
              :status,
              options_for_select(
                filter.select_statuses.map { |status| [status.titlecase, status] },
                filter.status
              ),
              prompt: 'Any'
            ) %>
        <%= form.select(
              :role,
              options_for_select(
                User::ROLES.map{ |role| [role.titlecase, role] },
                filter.role.to_s
              ),
              prompt: 'Any'
            ) %>
        <%= form.submit('Update') %>
      <% end %>
    </div>
  </div>
  <div><span class="records-returned-count"><%= users.count %></span> records returned</div>
</div>
