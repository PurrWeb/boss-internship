<h1>Users</h1>

<%= link_to('Manage Invites', invites_path, class: ['btn', 'btn-primary']) %>

<% if users.present? %>
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
    <tr>
    <% users.each do |user| %>
      <tr class="users-index-listing" data-user-id="<%= user.id %>">
        <td data-role="name">
          <%= link_to(user_path(user)) do %>
            <%= user.full_name %>
          <% end %>
        </td>
        <td data-role="email">
          <%= link_to(user_path(user)) do %>
            <%= user.email %>
          <% end %>
        </td>
        <td data-role="role">
          <%= link_to(user_path(user)) do %>
            <%= user.role.titleize %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
