<h1>Finance Reports</h1>

<p><%= venue.name %> <%= week.start_date.to_s(:human_date) %> - <%= week.end_date.to_s(:human_date) %></p>

<%= bootstrap_form_for('finance_reports_index', url: finance_reports_path, html: { method: :get }) do |form| %>
  <div class="form-inline">
    <%= form.select(
          :venue_id,
          options_for_select(
            accessible_venues.map do |venue|
              [venue.name, venue.id]
            end,
            venue.id
          ),
          {
            include_blank: false
          },
          {
            name: 'venue_id'
          }) %>
    <%= form.text_field(
          :start_date,
          label: 'Week',
          value: week.start_date && UIRotaDate.format(week.start_date),
          class: 'date-picker',
          name: 'week_start'
        ) %>
    <%= form.submit('Update') %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <% week.each do |date| %>
       <th><%= date %></th>
      <% end %>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <th>Name</th>
      <% week.each_with_day do |date, day| %>
       <th><%= day.to_s.titlecase %></th>
      <% end %>
      <th>Total Hours</th>
      <th>Old Hours</th>
      <th>Pay Rate</th>
      <th>Total</th>
      <th>Paid Holiday (Days)</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% reports.each do |report| %>
      <tr>
        <td><%= report.staff_member_name.titlecase %></td>
        <% week.each_with_day do |date, day| %>
          <td><%= report.public_send("#{day}_hours_count".to_sym).round(2) %></td>
        <% end %>
        <td>
          <%= report.total_hours_count.round(2) %>
        </td>
        <td>
          <%= report.owed_hours_count %>
        </td)>
        <td>
          <%= report.pay_rate_description %>
        </td>
        <td>
          <%= number_to_currency(report.total, unit: 'Â£') %>
        </td>
        <td>
          <%= report.holiday_days_count %>
        </td>
        <th>
          <%= report.status %>
          <% if report.can_complete? %>
            <%= link_to('Mark Completed' ,'#', class: 'btn btn-success') %>
          <% end %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>
