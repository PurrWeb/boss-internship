<h1>Finance Reports</h1>

<p><%= venue.name %> <%= week.start_date.to_s(:human_date) %> - <%= week.end_date.to_s(:human_date) %></p>

<%= bootstrap_form_for('finance_reports_index', url: finance_reports_path, html: { method: :get }) do |form| %>
  <div class="form-inline">
    <%= form.select(
          :venue_id,
          options_for_select(
            accessible_venues.map do |venue|
              [venue.name, venue.id]
            end,
            venue.id
          ),
          {
            include_blank: false
          },
          {
            name: 'venue_id'
          }) %>
    <%= form.text_field(
          :start_date,
          label: 'Week',
          value: week.start_date && UIRotaDate.format(week.start_date),
          class: 'date-picker',
          name: 'week_start'
        ) %>
    <%= form.submit('Update') %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <% week.each do |date| %>
       <th><%= date %></th>
      <% end %>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <th>Name</th>
      <% week.each_with_day do |date, day| %>
       <th><%= day.to_s.titlecase %></th>
      <% end %>
      <th>Total Hours</th>
      <th>Old Hours</th>
      <th>Pay Rate</th>
      <th>Total</th>
      <th>Paid Holiday (Days)</th>
    </tr>
  </thead>
  <tbody>
    <% staff_members_data.each do |staff_member, staff_member_data| %>
      <tr>
        <td><%= staff_member.full_name.titlecase %></td>
        <% week.each_with_day do |date, day| %>
          <td><%= staff_member_data.fetch("#{day}_hours_count".to_sym).round(2) %></td>
        <% end %>
        <td>
          <%= staff_member_data.fetch(:hours_count).round(2) %>
        </td>
        <td>
          <%= staff_member_data.fetch(:owed_hours_count) %>
        </td)>
        <td>
          <%= staff_member.pay_rate.text_description %>
        </td>
        <td>
          <%= number_to_currency(staff_member_data.fetch(:total), unit: 'Â£') %>
        </td>
        <td>
          <%= staff_member_data.fetch(:holiday_day_count) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
