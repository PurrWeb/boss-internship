<h1>Finance Reports</h1>

<p>Venue: <%= venue.name %></p>
<p><%= week.start_date.to_s(:human_date) %> - <%= week.end_date.to_s(:human_date) %></p>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <% week.each do |date| %>
       <th><%= date %></th>
      <% end %>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
      <th>Name</th>
      <% week.each_with_day do |date, day| %>
       <th><%= day.to_s.titlecase %></th>
      <% end %>
      <th>Total Hours</th>
      <th>Old Hours</th>
      <th>Pay Rate</th>
      <th>Total</th>
      <th>Paid Holiday (Days)</th>
    </tr>
  </thead>
  <tbody>
    <% staff_members_data.each do |staff_member, staff_member_data| %>
      <tr>
        <td><%= staff_member.full_name.titlecase %></td>
        <% week.each_with_day do |date, day| %>
          <td><%= staff_member_data.fetch("#{day}_hours_count".to_sym).round(2) %></td>
        <% end %>
        <td>
          <%= staff_member_data.fetch(:hours_count).round(2) %>
        </td>
        <td>
          <%= staff_member_data.fetch(:owed_hours_count) %>
        </td)>
        <td>
          <%= staff_member.pay_rate.text_description %>
        </td>
        <td>
          <%= number_to_currency(staff_member_data.fetch(:total), unit: 'Â£') %>
        </td>
        <td>
          <%= staff_member_data.fetch(:holiday_day_count) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
