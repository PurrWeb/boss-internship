<h1>Edit Avatar</h2>

<%= bootstrap_form_for(staff_member, url: update_avatar_staff_member_path(staff_member), method: :post, html: { multipart: true, class: 'staff-member-form' }) do |form| %>
  <% if form.object.avatar? %>
    <%= image_tag(form.object.avatar_url, class: "avatar_preview", height: 120, width: 120) %>
  <% end %>
  <%= form.label("Avatar") %>
  <input type="hidden" id="base64Image" name="staff_member[avatar_base64]" />
  <%= react_component("StaffMemberFormAvatarImage", dataUrlInputSelector:"#base64Image", selectedImageSelector: ".avatar_preview") %>

  <button type="submit" class="btn btn-default">Submit</button>
<% end %>
