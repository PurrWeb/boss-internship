<h1>Weekly Reports</h1>
<div class="h3"><%= venue.name.titlecase %> <%= week.start_date.to_s(:human_date) %>-<%= week.end_date.to_s(:human_date) %></div>

<%= bootstrap_form_for('weekly_report_index', url: weekly_reports_path, html: { method: :get }) do |form| %>
  <div class="form-inline">
    <%= form.select(
          :venue_id,
          options_for_select(
            accessible_venues.map do |venue|
              [venue.name, venue.id]
            end,
            venue.id
          ),
          {
            include_blank: false
          },
          {
            name: 'venue_id'
          }) %>
    <%= form.text_field(
          :start_date,
          label: 'Week',
          value: week.start_date && UIRotaDate.format(week.start_date),
          class: 'static-week-picker',
          name: 'week_start'
        ) %>

    <%= form.submit('Update') %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Day</th>
      <% reports.each do |date, report_data| %>
        <th>
          <%= link_to(
                date.to_s(:weekday_only),
                daily_reports_path(
                  date: UIRotaDate.format(date),
                  venue_id: venue.id
                ),
                class: 'link-unstyled'
              ) %>
        </th>
      <% end %>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Overheads</th>
      <% reports.each do |date, report_data| %>
        <td>
          <%= link_to(
                number_to_currency(
                  report_data.fetch(:overheads_cents) / 100.0,
                  unit: '£'
                ),
                daily_reports_path(
                  date: UIRotaDate.format(date),
                  venue_id: venue.id
                ),
                class: 'link-unstyled'
              ) %>
        </td>
      <% end %>
      <td>
        <strong>
          <%= number_to_currency(
                totals.fetch(:overheads_cents) / 100.0,
                unit: '£'
              ) %>
        </strong>
      </td>
    </tr>
    <tr>
      <th>Rotaed Cost - Overheads</th>
      <% reports.each do |date, report_data| %>
        <td>
          <%= link_to(
                number_to_currency(
                  report_data.fetch(:rotaed_cost_minus_overheads_cents) / 100.0,
                  unit: '£'
                ),
                daily_reports_path(
                  date: UIRotaDate.format(date),
                  venue_id: venue.id
                ),
                class: 'link-unstyled'
              ) %>
        </td>
      <% end %>
      <td>
        <strong>
          <%= number_to_currency(
                totals.fetch(:rotaed_cost_minus_overheads_cents) / 100.0,
                unit: '£'
              ) %>
        </strong>
      </td>
    </tr>
    <tr>
      <th>Actual Cost - Overheads</th>
      <% reports.each do |date, report_data| %>
        <td>
          <%= link_to(
                number_to_currency(
                  report_data.fetch(:actual_cost_minus_overheads_cents) / 100.0,
                  unit: '£'
                ),
                daily_reports_path(
                  date: UIRotaDate.format(date),
                  venue_id: venue.id
                ),
                class: 'link-unstyled'
              ) %>
        </td>
      <% end %>
      <td>
        <strong>
          <%= number_to_currency(
                totals.fetch(:actual_cost_minus_overheads_cents) / 100.0,
                unit: '£'
              ) %>
        </strong>
      </td>
    </tr>
    <tr>
      <th>Actual Cost</th>
      <% reports.each do |date, report_data| %>
        <td>
          <%= link_to(
                number_to_currency(
                  report_data.fetch(:actual_cost_cents) / 100.0,
                  unit: '£'
                ),
                daily_reports_path(
                  date: UIRotaDate.format(date),
                  venue_id: venue.id
                ),
                class: 'link-unstyled'
              ) %>
        </td>
      <% end %>
      <td>
        <strong>
          <%= number_to_currency(
                totals.fetch(:actual_cost_cents) / 100.0,
                unit: '£'
              ) %>
        </strong>
      </td>
    </tr>
    <tr>
      <th>Variance</th>
      <% reports.each do |date, report_data| %>
        <td class="<%= "text-danger" if report_data.fetch(:variance_cents) < 0 %>">
          <%= link_to(
                number_to_currency(
                  report_data.fetch(:variance_cents) / 100.0,
                  unit: '£'
                ),
                daily_reports_path(
                  date: UIRotaDate.format(date),
                  venue_id: venue.id
                ),
                class: 'link-unstyled'
              ) %>
        </td>
      <% end %>
      <td class="<%= "text-danger" if totals.fetch(:variance_cents) < 0 %>">
        <strong>
          <%= number_to_currency(
                totals.fetch(:variance_cents) / 100.0,
                unit: '£'
              ) %>
        </strong>
      </td>
    </tr>
  </tbody>
</table>
