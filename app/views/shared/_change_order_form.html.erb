<%= bootstrap_form_for(
      change_order,
      url: url,
      method: 'put'
    )  do |form| %>
  <%= form.number_field(:five_pound_notes, prepend: "£") %>
  <%= form.number_field(:one_pound_coins, prepend: "£") %>
  <%= form.number_field(:fifty_pence_coins, prepend: "£") %>
  <%= form.number_field(:twenty_pence_coins, prepend: "£") %>
  <%= form.number_field(:ten_pence_coins, prepend: "£") %>
  <%= form.number_field(:five_pence_coins, prepend: "£") %>

  <%= form.submit(action_text, class: 'button mb-md') %>
<% end %>
