<%= bootstrap_form_for(
      change_order,
      url: url,
      method: 'put'
    )  do |form| %>
  <%= form.number_field(:five_pound_notes) %>
  <%= form.number_field(:one_pound_coins) %>
  <%= form.number_field(:fifty_pence_coins) %>
  <%= form.number_field(:twenty_pence_coins) %>
  <%= form.number_field(:ten_pence_coins) %>
  <%= form.number_field(:five_pence_coins) %>

  <%= form.submit(action_text) %>
<% end %>
