<div class="boss-board__report">
  <div class="boss-table boss-table_page_change-order-report">
    <div class="boss-table__row">
      <div class="boss-table__cell boss-table__cell_role_header">Venue</div>
      <div class="boss-table__cell boss-table__cell_role_header">£5</div>
      <div class="boss-table__cell boss-table__cell_role_header">£1</div>
      <div class="boss-table__cell boss-table__cell_role_header">50p</div>
      <div class="boss-table__cell boss-table__cell_role_header">20p</div>
      <div class="boss-table__cell boss-table__cell_role_header">10p</div>
      <div class="boss-table__cell boss-table__cell_role_header">5p</div>
      <div class="boss-table__cell boss-table__cell_role_header">Total</div>
      <div class="boss-table__cell boss-table__cell_role_header">Action</div>
    </div>

    <% change_orders.each do |change_order| %>
      <div class="boss-table__row">

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">Venue</p>
            <p class="boss-table__text"><%= change_order.venue.name.titlecase %></p>
          </div>
        </div>

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">£5</p>
            <p class="boss-table__text"><%= number_to_currency(change_order.five_pound_notes, unit: '£', precision: 2) %></p>
          </div>
        </div>

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">£1</p>
            <p class="boss-table__text"><%= number_to_currency(change_order.one_pound_coins, unit: '£', precision: 2) %></p>
          </div>
        </div>

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">50p</p>
            <p class="boss-table__text"><%= number_to_currency(change_order.fifty_pence_coins, unit: '£', precision: 2) %></p>
          </div>
        </div>

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">20p</p>
            <p class="boss-table__text"><%= number_to_currency(change_order.twenty_pence_coins, unit: '£', precision: 2) %></p>
          </div>
        </div>

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">10p</p>
            <p class="boss-table__text"><%= number_to_currency(change_order.ten_pence_coins, unit: '£', precision: 2) %></p>
          </div>
        </div>

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">5p</p>
            <p class="boss-table__text"><%= number_to_currency(change_order.five_pence_coins, unit: '£', precision: 2) %></p>
          </div>
        </div>

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">Total</p>
            <p class="boss-table__text"><%= number_to_currency(change_order.total, unit: '£', precision: 2) %></p>
          </div>
        </div>

        <div class="boss-table__cell">
          <div class="boss-table__info">
            <p class="boss-table__label">Actions</p>
            <%= render partial: action_partial, locals: { change_order: change_order } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
