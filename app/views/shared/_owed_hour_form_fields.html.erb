<%= form.text_field(
    :date,
    value: UIRotaDate.format(form.object.date || RotaShiftDate.to_rota_date(Time.current)),
    label: 'Date',
    class: 'date-picker'
  ) %>

<%= form.select(
      :starts_at_offset,
      options_for_select(
        form.object.possible_time_values,
        form.object.starts_at_offset
      ),
      {
        label: 'Starts at'
      },
      class: 'chosen-select'
    ) %>

<%= form.select(
      :ends_at_offset,
      options_for_select(
        form.object.possible_time_values,
        form.object.ends_at_offset
      ),
      {
        label: 'Ends at'
      },
      class: 'chosen-select'
    ) %>

<%= form.text_area :note %>
