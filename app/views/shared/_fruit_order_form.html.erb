<%= bootstrap_form_for(
      fruit_order,
      url: url,
      method: 'put'
    )  do |form| %>
  <% fruit_order.form_fruit_order_fields.each do |field| %>
    <%= form.number_field(
      field,
      label: FruitOrder.message_for(field),
      label_class: 'force-not-required'
    ) %>
  <% end %>
  <%= form.submit(action_text) %>
<% end %>
