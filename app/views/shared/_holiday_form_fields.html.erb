<div class="container-fluid">
  <div class="row">
    <div class="small-12 medium-4 column">
      <%= form.text_field(
              :start_date,
              value: form.object.start_date && UIRotaDate.format(form.object.start_date),
              class: 'date-picker'
          ) %>
    </div>
    <div class="small-12 medium-4 column">
      <%= form.text_field(
              :end_date,
              value: form.object.end_date && UIRotaDate.format(form.object.end_date),
              class: 'date-picker'
          ) %>
    </div>
    <div class="small-12 medium-4 column">
      <%= form.select(
            :holiday_type,
            options_for_select(
              Holiday::HOLIDAY_TYPES.map do |h|
                [h.titleize, h]
              end,
              form.object.holiday_type
            ),
            include_blank: true,
            label_class: 'required'
          ) %>
      </div>
  </div>
  <%= form.text_area :note %>
</div>
