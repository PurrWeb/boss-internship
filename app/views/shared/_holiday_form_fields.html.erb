<div class="container-fluid">
  <div class="form-inline">
    <%= form.date_select(
          :start_date,
          {
            start_year: Time.now.year,
            end_year: 1940,
            include_blank: true,
            with_css_classes: true,
            label_class: 'required'
          }
        ) %>
    <%= form.date_select(
          :end_date,
          {
            start_year: Time.now.year,
            end_year: 1940,
            include_blank: true,
            with_css_classes: true,
            label_class: 'required'
          }
        ) %>
    <%= form.select(
          :holiday_type,
          options_for_select(
            Holiday::HOLIDAY_TYPES.map do |h|
              [h.titleize, h]
            end,
            form.object.holiday_type
          ),
          include_blank: true,
          label_class: 'required'
        ) %>
  </div>

  <div class="col-md-6">
    <%= form.text_area :note %>
  </div>
</div>
