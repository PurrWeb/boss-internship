<%= bootstrap_form_for(pay_rate, url: path) do |form| %>
  <div class="form-group">
    <label>Type</label>
    <p class="form-control-static"><%= pay_rate_type.titlecase %></p>
  </div>
  <%= form.text_field(:name) %>
  <%= form.text_field(
        :hourly_rate,
        prepend: 'Â£',
        value: form.object.pounds_per_hour,
        help: "#{ form.object.errors[:cents_per_hour].to_sentence }",
        wrapper_class: "#{ 'has-error' if form.object.errors[:cents_per_hour].present? }"
      ) %>

  <%= form.submit %>
<% end %>
