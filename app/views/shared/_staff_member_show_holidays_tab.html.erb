<% if staff_member.enabled? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <span>Add holiday</span>
    </div>
    <div class="panel-body">
      <%= render partial: 'shared/add_holiday_form', locals: { holiday: new_holiday, staff_member: staff_member } %>
    </div>
  </div>
<% end %>

<h2>Holidays</h2>

<% if holidays.present? %>
  <p><%= pluralize(estimated_accrued_holiday_days, "Day") %> accrued this year (Estimated)</p>
  <p><%= pluralize(paid_holiday_days, 'Paid day') %> logged this year</p>
  <p><%= pluralize(unpaid_holiday_days, 'Unpaid day') %> logged this year</p>

  <%= render partial: 'shared/holidays_table', locals: { staff_member: staff_member, holidays: holidays } %>
<% else %>
  <div>No holidays this year</div>
<% end %>
