<% if !user.security_manager? %>
  <%= form.select(
        :master_venue,
        options_for_select(
          Venue.all.map { |venue| [venue.name.titleize, venue.id] },
          form.object.master_venue.andand.id
        ),
        {
          label: 'Main Venue'
        },
        id: 'staff-member-master-venue-select',
        class: 'chosen-select'
      ) %>

  <%= form.select(
        :work_venues,
        options_for_select(
          Venue.all.map { |venue| [venue.name.titleize, venue.id] },
          form.object.work_venues.map{ |venue| venue.id }
        ),
        {
          label: 'Other Venues'
        },
        multiple: true,
        id: 'staff-member-work-venues-select',
        class: 'chosen-select'
      ) %>
<% end %>
