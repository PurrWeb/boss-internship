<div class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header nav-brand-section">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Boss', root_path, class: 'navbar-brand' %>
    </div>

    <% if current_user.present? %>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if can?(:manage, :users) %>
            <li class="nav-users-section">
              <%= link_to(users_path, class: "#{'active' if in_user_section? }")do %>
                Users <% if in_user_section? %><span class="sr-only">(current)</span><% end %>
              <% end %>
            </li>
          <% end %>

          <% if can?(:manage, :staff_members) %>
            <li class="nav-staff-members-section">
              <%= link_to(staff_members_path, class: "#{'active' if in_staff_members_section? }") do %>
                Staff Members <% if in_staff_members_section? %><span class="sr-only">(current)</span><% end %>
              <% end %>
            </li>
          <% end %>

          <% if can?(:manage, :rotas) %>
            <li class="nav-rota-section">
              <%= link_to(rotas_path, class: "#{'active' if in_rotas_section? }") do %>
                Rota <% if in_rotas_section? %><span class="sr-only">(current)</span><% end %>
              <% end %>
            </li>
          <% end %>

          <% if can?(:manage, :venues) %>
            <li class="nav-venues-section">
              <%= link_to(venues_path, class: "#{'active' if in_venues_section? }") do %>
                Venues <% if in_venues_section? %><span class="sr-only">(current)</span><% end %>
              <% end %>
            </li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right nav-user-section">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Signed in as <%= current_user.email %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to('Sign out', destroy_user_session_path, method: :delete) %></li>
            </ul>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
