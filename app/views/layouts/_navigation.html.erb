<div class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header nav-brand-section">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Boss', root_path, class: 'navbar-brand' %>
    </div>

    <% if current_user.present? %>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if can?(:manage, :staff_members) %>
            <li class="nav-staff-members-section">
              <%= link_to(staff_members_path, class: "nav-section-header-link #{'active' if in_staff_members_section? }") do %>
                Staff Members <% if in_staff_members_section? %><span class="sr-only">(current)</span><% end %>
              <% end %>
            </li>
          <% end %>

          <% if can?(:manage, :rotas) %>
            <li class="nav-rota-section dropdown">
              <a href="#" class="nav-section-header-link dropdown-toggle <%= "#{'active' if in_rotas_section? }" %>" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Rota <% if in_rotas_section? %><span class="sr-only">(current)</span><% end %><span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to('Prefilled Example', prefilled_example_rotas_path) %>
                </li>
                <li>
                  <%= link_to('Empty Example', empty_example_rotas_path) %>
                </li>
              </ul>
            </li>
          <% end %>

        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if can?(:manage, :admin) %>
            <li class="dropdown nav-admin-section">
              <a href="#" class="nav-section-header-link dropdown-toggle <%= "#{'active' if in_admin_section?}" %>" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Admin
                <% if in_admin_section? %>
                  <span class="sr-only">(current)</span>
                <% end %>
                <span class="caret"></span>
              </a>

              <ul class="dropdown-menu">
                <li class="nav-users-section">
                  <%= link_to('Users', users_path) %>
                </li>

                <% if can?(:manage, :venues) %>
                  <li class="nav-venues-section">
                    <%= link_to('Venues', venues_path) %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>

          <li class="dropdown nav-user-section">
            <a href="#" class="nav-section-header-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Signed in as <%= current_user.email %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to('Sign out', destroy_user_session_path, method: :delete) %></li>
            </ul>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
