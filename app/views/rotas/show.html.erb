<%= javascript_tag do %>
  window.boss = window.boss || {};
  window.boss.accessToken = "<%= access_token.token %>";
<% end %>

<%= react_component('RotaDailyApp', {
  accessToken: access_token.token,
  currentVenue: Api::V1::VenueSerializer.new(current_venue),
  venues: ActiveModel::Serializer::CollectionSerializer.new(
    venues,
    serializer: Api::V1::VenueSerializer,
  ),
  holidays: ActiveModel::Serializer::CollectionSerializer.new(
    holidays,
    serializer: Api::V1::RotaDaily::HolidaySerializer,
  ),
  staffTypes: ActiveModel::Serializer::CollectionSerializer.new(
    staff_types,
    serializer: Api::V1::RotaDaily::StaffTypeSerializer,
  ),
  staffMembers: ActiveModel::Serializer::CollectionSerializer.new(
    staff_members,
    serializer: Api::V1::RotaDaily::StaffMemberSerializer,
  ),
  rotas: ActiveModel::Serializer::CollectionSerializer.new(
    rotas,
    serializer: Api::V1::RotaDaily::RotaSerializer,
  ),
  rota: Api::V1::RotaDaily::RotaSerializer.new(rota),
  rotaShifts: ActiveModel::Serializer::CollectionSerializer.new(
    rota_shifts,
    serializer: Api::V1::RotaDaily::RotaShiftSerializer,
  ),
  weekRotaShifts: ActiveModel::Serializer::CollectionSerializer.new(
    week_rota_shifts,
    serializer: Api::V1::RotaDaily::RotaShiftSerializer,
  ),
}) %>
