<%= javascript_tag do %>
  maintenance = {};

  maintenance.maintenanceTasks = <%= camelized_collection_json(maintenance_tasks, Api::V1::MaintenanceTaskSerializer, { current_user: current_user }, '**') %>;
  maintenance.venues = <%= camelized_collection_json(venues, Api::V1::VenueSerializer) %>;
  maintenance.currentUser = <%= Api::V1::UserSerializer.new(current_user).to_json.html_safe %>;
  maintenance.accessToken = "<%= access_token.token %>";
  maintenance.currentPageNumber = <%= current_page_number %>;
  maintenance.priorities = <%= priorities.to_json.html_safe %>;
  maintenance.statuses = <%= statuses.to_json.html_safe %>;
  maintenance.totalPages = <%= total_pages %>;
  maintenance.totalCount = <%= total_count %>;
  maintenance.pageNumber = <%= page_number %>;

  window.boss = window.boss || {};
  window.boss.maintenance = maintenance;
<% end %>

<%= react_component('MaintenanceApp') %>
