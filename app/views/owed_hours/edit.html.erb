<h1>Edit Owed Hours</h1>

<% if owed_hour.errors[:base].present? %>
  <div class="alert alert-danger" role="alert">
    <%= owed_hour.errors[:base].to_sentence %>
  </div>
<% end %>

<%= form_for(owed_hour, url: owed_hour_path(id: owed_hour.id)) do |form| %>
  <%= render partial: 'shared/owed_hour_form_fields', locals: { form: form } %>
  <button type="submit" class="btn btn-default">Edit</button>
<% end %>
